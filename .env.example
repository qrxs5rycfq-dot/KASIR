# ============================================
# KASIR MODERN - Environment Configuration
# ============================================
# Salin file ini menjadi .env dan sesuaikan nilai-nilainya
# Copy this file to .env and adjust the values
# ============================================

# ===========================================
# FLASK CONFIGURATION
# ===========================================

# Secret key untuk session dan keamanan aplikasi
# Ganti dengan string acak yang panjang untuk production!
SECRET_KEY=your-super-secret-key-change-this-in-production

# Mode debug (true/false)
# Set ke 'false' untuk production
FLASK_DEBUG=true

# Environment mode (development/production)
# Set ke 'production' untuk production (enables secure cookies)
FLASK_ENV=development

# URL aplikasi (untuk generate QR Code)
APP_URL=http://localhost:8000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Gunakan MySQL (true) atau SQLite (false)
# SQLite lebih mudah untuk development, MySQL untuk production
USE_MYSQL=false

# Konfigurasi MySQL (hanya digunakan jika USE_MYSQL=true)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=kasir_db

# ===========================================
# MIDTRANS PAYMENT GATEWAY
# ===========================================

# Dapatkan key dari https://dashboard.midtrans.com
# Untuk testing, gunakan Sandbox keys (SB-Mid-...)
# Untuk production, gunakan Production keys

# Server Key (untuk backend)
MIDTRANS_SERVER_KEY=SB-Mid-server-XXXXXXXXXXXXXX

# Client Key (untuk frontend)
MIDTRANS_CLIENT_KEY=SB-Mid-client-XXXXXXXXXXXXXX

# Mode production (true/false)
# Set ke 'false' untuk Sandbox/testing
MIDTRANS_IS_PRODUCTION=false
